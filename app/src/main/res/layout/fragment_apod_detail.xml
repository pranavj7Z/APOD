<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_image">

        <ImageView
            android:id="@+id/iv_detail_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_image_height" />
        <View
            android:background="@drawable/detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_image_height"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingEnd="@dimen/large_margin_size"
            android:paddingStart="@dimen/large_margin_size"
            android:paddingBottom="@dimen/large_margin_size">

            <TextView
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_copyright"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:textColor="@color/white" />

        </LinearLayout>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="About"
                android:paddingTop="@dimen/normal_margin_size"
                android:paddingBottom="@dimen/normal_margin_size"
                android:paddingEnd="@dimen/large_margin_size"
                android:paddingStart="@dimen/large_margin_size"
                android:textSize="@dimen/title_text_size"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:paddingEnd="@dimen/large_margin_size"
                android:paddingStart="@dimen/large_margin_size"
                android:paddingBottom="@dimen/normal_margin_size"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>


